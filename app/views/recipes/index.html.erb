<h2>Recipes</h2>
<div class="boxes">
  <% @recipes.each do |recipe| %>
    <div class="box" style= "background-image: url(<%= recipe.img_url %>)">
      <p class="boxy">
        <%= link_to recipe.name, recipe_path(recipe) %>
        <% if current_user %>
         <span class= "favorite">&hearts;</span>
        <% end %>
      </p>
      <small>

      </small>
    </div>
  <% end %>
  <% if current_user %>
    <a href="<%= new_recipe_path %>"><div style = "background-image: url(http://i.imgur.com/GkEIPFO.jpg)" class="box new_item"><span>+</span></div></a>
  <% end %>
</div>
