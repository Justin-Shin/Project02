<h2><%= @recipe.name %>
  <% if current_user %>
   (<%= link_to "Edit", edit_recipe_path %>)
  <% end %>
 </h2>
<div class = "show recipe form">
  <div class="food_item left" style="background-image: url(<%= @recipe.img_url%>)"></div>
  <div class = "middle">
    <h3>
      Ingredients:
    </h3>
    <% @recipe.ingredients.each do |ingredient| %>
      <div><%= "#{ingredient.amount} #{ingredient.unit_of_measure} #{ingredient.food.name}"%></div>
      <% end %>
  </div>
  <div class="right">
    <h3>Instructions:</h3>
    <div style="white-space: pre-line;"><%= @recipe.instructions %></div>
  </div>
</div>
